<Window x:Class="phone_utils.ScrcpySettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scrcpy Settings" Height="420" Width="520"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource AppBackgroundColor}">
    <Window.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ButtonBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource ButtonForeground}"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style TargetType="TextBlock"><Setter Property="Foreground" Value="White"/></Style>
        <Style TargetType="Label"><Setter Property="Foreground" Value="White"/></Style>
        <Style TargetType="CheckBox"><Setter Property="Foreground" Value="White"/></Style>
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#222"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="CaretBrush" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Border Background="#2a2a2a" CornerRadius="8" Padding="12" BorderBrush="Gray" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Scrcpy Settings" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,8"/>

                <WrapPanel Margin="0,0,0,8">
                    <CheckBox x:Name="ChkAudioOnly" Content="Audio Only" Margin="4"/>
                    <CheckBox x:Name="ChkNoAudio" Content="No Audio" Margin="4"/>
                    <CheckBox x:Name="ChkPlaybackAudio" Content="Playback Audio" Margin="4"/>
                </WrapPanel>

                <WrapPanel Margin="0,0,0,8">
                    <CheckBox x:Name="Chkaudiobuffer" Content="Audio buffer Size:" Margin="4"/>
                    <TextBox x:Name="TxtAudioBuffer" Width="60" Text="50" Margin="4"/>
                    <CheckBox x:Name="Chkvideobuffer" Content="Video buffer Size:" Margin="4"/>
                    <TextBox x:Name="TxtVideoBuffer" Width="60" Text="50" Margin="4"/>
                </WrapPanel>

                <WrapPanel Margin="0,0,0,8">
                    <CheckBox x:Name="ChkStayAwake" Content="Stay Awake" Margin="4"/>
                    <CheckBox x:Name="ChkTurnScreenOff" Content="Turn Screen Off" Margin="4"/>
                    <CheckBox x:Name="ChkLockAfterExit" Content="Lock Phone After Closing" Margin="4"/>
                    <CheckBox x:Name="ChkTop" Content="Always on top" Margin="4"/>
                </WrapPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Limit Max Size:" VerticalAlignment="Center" Margin="4" Width="110"/>
                    <CheckBox x:Name="ChkMaxSize" Margin="4" VerticalAlignment="Center"/>
                    <TextBox x:Name="TxtMaxSize" Width="80" Text="2440" Margin="4"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,6,0,0" HorizontalAlignment="Right">
                    <Button x:Name="BtnSave" Content="Save" Width="100" Height="32" Style="{StaticResource ModernButtonStyle}"/>
                    <Button x:Name="BtnCancel" Content="Cancel" Width="100" Height="32" Style="{StaticResource ModernButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>